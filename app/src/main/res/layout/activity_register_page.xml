<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <EditText
        android:id="@+id/register_in_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/register_in_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:layout_below="@+id/register_in_username"
        android:inputType="number"
        android:hint="Phone Number"
        />
    <EditText
        android:id="@+id/register_in_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:layout_below="@+id/register_in_phoneNumber"
        android:inputType="textPassword"
        android:hint="Password"
        />

    <Button
        android:id="@+id/register_in_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:text="Register"
        android:layout_below="@+id/register_in_password"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

</RelativeLayout>